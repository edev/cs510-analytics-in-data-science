<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      Christmas need timeline: <%= @need_slug.gsub('_', ' ') %>
  </title>

  <link rel="stylesheet" href="https://code.highcharts.com/css/highcharts.css" />
  <link rel="stylesheet" href="/round_3/styles.css" />
  <link rel="stylesheet" href="/round_3/christmas_needs.css" />
  </head>

  <body>
    <% unless @need_group.nil? %>
      <nav>
      <% unless @previous_need_slug.nil? %>
        <div id="prev">
          <a href="/round_3/christmas_needs/timeline/<%= @previous_need_slug %>">
            Previous<br />
            <%= @previous_need_slug.gsub('_', ' ').capitalize %>
          </a>
        </div>
      <% end %>

      <select id="dropdown-nav">
        <% @need_group.each do |need_slug| %>
          <option value="<%= need_slug.to_s %>" <%= 'selected' if need_slug.to_s == @need_slug %>>
            <%= need_slug.to_s.gsub('_', ' ').capitalize %>
          </option>
        <% end %>
      </select>

      <% unless @next_need_slug.nil? %>
        <div id="prev">
          <a href="/round_3/christmas_needs/timeline/<%= @next_need_slug %>">
            Next<br />
            <%= @next_need_slug.gsub('_', ' ').capitalize %>
          </a>
        </div>
      <% end %>
      </nav>
    <% end %>

    <figure id="timeline"></figure>

    <script src="/jquery-3.4.1.js"></script>
    <script src="/highcharts-8.0.0.js"></script>
    <script src="/highcharts-more-8.0.0.js"></script>
    <script src="/highcharts-solid-gauge-8.0.0.js"></script>
    <script src="/round_3/christmas_needs/timeline/<%= @need_slug %>/chart"></script>
    <script src="/round_3/christmas_needs/timeline/<%= @need_slug %>/navigation"></script>
  </body>
</html>


