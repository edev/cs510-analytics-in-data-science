#directors {
  float: left;
  width: 450px;
  border-collapse: collapse;
}

th {
  border-bottom: 2px solid #333;
  text-align: left;
}

td {
  border-bottom: 1px solid #777;
  padding: 0.5em 2em 0.5em 0;
}

td .filled {
    color: green;
}

td .unfilled {
    color: red;
    font-weight: 700;
}

.gauges {
  margin-left: 470px;
  max-width: calc(1920px - 470px);
}

.chart {
  display: inline-block;
  width: 14em;
  height: 16em;
  margin: 0;
}

.highcharts-title {
  text-align: center;
}

.highcharts-data-label {
  font-size: 16pt;
}
