a {
  color: #555;
}

#directors {
  float: left;
}

#directors h2 {
  margin-top: 0;
}

table {
  width: 450px;
  border-collapse: collapse;
}

th {
  border-bottom: 2px solid #333;
  text-align: left;
}

td {
  border-bottom: 1px solid #777;
  padding: 0.5em 2em 0.5em 0;
}

td .filled {
    color: green;
}

td .unfilled {
    color: red;
    font-weight: 700;
}

.gauges {
  margin-left: 470px;
  max-width: calc(1920px - 470px);
  text-align: center;
}

.chart {
  display: inline-block;
  width: 20em;
  height: 20em;
  margin: 0;
}

.highcharts-title {
  font-size: 14pt;
  font-weight: bold;
  text-align: center;
}

.highcharts-subtitle {
  font-size: 14pt;
  text-align: center;
}

.highcharts-data-label {
  font-size: 16pt;
  font-weight: normal;
}
