<% num_styles = 0 %>
<% colors = ['#00429d', '#3051a7', '#4961b2', '#5f72bc', '#7383c7', '#8695d1', '#99a7dc', '#abb9e6', '#beccf1', '#d0dffb'].cycle %>
<% strokes = [
  '5,0',
  '5,5',
  '12,5,3,5',
  '10,10'
].cycle %>

body {
    font-family: sans-serif;
}

<% (0...num_styles).each do |i| %>
  <% color = colors.next %>
  .highcharts-color-<%= i %> {
      fill:   <%= color %>;
      stroke: <%= color %>;
      stroke-dasharray: <%= strokes.next %>;
  }
<% end %>

.highcharts-container {
    font-size: 14pt;
}

#all_meals,
#yearly_meals,
#monthly_meals_in_last_year,
#monthly_meals_year_over_year,
#timeline {
  height: 600px;
  max-height: 80%;
}
