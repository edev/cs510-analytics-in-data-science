document.addEventListener('DOMContentLoaded', function () {
  var chart = Highcharts.chart({
    chart: {
      renderTo: 'all_meals',
      type: 'line',
      zoomType: 'x'
    },
    plotOptions: {
      series: {
        findNearestPointBy: 'xy',
        marker: {
          enabled: true
        }
      }
    },
    series: [{
      name: 'Meals served',
      data: [
<%= @data %>
      ]
    }],
    title: {
      text: 'All recorded meals'
    },
    xAxis: {
      dateTimeLabelFormats: {
        day: '%e. %b',
        week: '%B %e',
        month: '%B %Y',
        year: '%Y'
      },
      type: 'datetime',
    },
    yAxis: {
      gridLineWidth: 1,
      title: {
        text: 'Number of plates served'
      }
    }
  });
});
